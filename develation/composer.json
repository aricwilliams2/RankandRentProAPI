{
    "name": "bluefission/develation",
    "description": "Core Framework for BlueFission.com internal PHP Projects",
    "license": "MIT",
    "keywords": ["develation", "framework", "core", "bluefission", "php"],
    "authors": [
        {
            "name": "Devon Scott",
            "email": "dscott@bluefission.com",
            "homepage": "https://bluefission.com",
            "role": "Developer"
        }
    ],
    "minimum-stability": "dev",
    "require": {
        "php": "*",
        "cboden/ratchet": "^0.4.4",
        "psr/http-message": "^2.0@dev",
        "psr/http-client": "^1.0@dev",
        "php-http/discovery": "1.x-dev"
    },
    "git": {
        "platform-check": true
    },
    "autoload": {
        "psr-4": {
            "BlueFission\\": "src"
        },
        "classmap": [
           "src/"
        ]
    },
    "autoload-dev": {
        "psr-4": { 
            "BlueFission\\Tests\\": "tests/" 
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^11.1@dev"
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": true
        }
    }
}
